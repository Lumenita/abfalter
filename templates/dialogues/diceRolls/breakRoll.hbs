<div class="abfalter weaponChatRollMsg" data-actor-id="{{actor._id}}">
    <div>
        <span> {{actor.name}} </span>
        <span> {{breakDetails.wepName}} </span>
        {{#ifEquals breakDetails.wepType "ranged"}}
        <span> {{breakDetails.ammoName}} </span>
        {{/ifEquals}}
    </div>

    <div class="chatAtkRoll atkCustomTitleContainer">
        <span> {{breakDetails.label}}</span>
        <span class="{{rollResult.color}}"> {{rollResult.newTotal}} </span>
        <div class="atkCustomTitle">{{breakDetails.formula}}</div>
    </div>

    <div class="primaryExplodeRoll">
        {{#if rollResult.explode}}
        <span style="color: green;"> {{localize "abfalter.dialogs.openRoll"}} </span>
        {{/if}}
        {{#if rollResult.fumble}}
        <span style="color: red;"> {{localize "abfalter.dialogs.fumble"}} </span>
        {{/if}}
    </div>
</div>