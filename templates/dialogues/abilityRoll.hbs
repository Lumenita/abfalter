<div class="abfalter secondarychatmsg" data-actor-id="{{actor._id}}">
    <div>
        <span> {{actor.name}} </span>
    </div>
    {{#each rollData as |roll i|}}
    <div title="{{roll.result}}">
        <span> {{roll.label}} </span>
        <span class="{{roll.color}}"> {{roll.total}} </span>
    </div>
    <div class="explodeButtons">
        {{#if roll.explode}}
        <button class="secOpenRoll" data-actor-id="{{actor._id}}"> {{localize "abfalter.dialogs.openRoll"}} </button>
        {{/if}}
        {{#if roll.fumble}}
        <button class="secFumbleRoll" data-actor-id="{{actor._id}}"> {{localize "abfalter.dialogs.fumbleSeverity2"}} </button>
        {{/if}}
        {{#if roll.showSeverity}}
        <div class="fumbleSeverity" title="{{rollResult.result}}">
            <span> {{localize "abfalter.dialogs.fumbleSeverity"}} </span>
            <span class="fumbleRoll"> {{roll.roll}} </span>
        </div>
        {{/if}}
    </div>
    {{/each}}
</div>