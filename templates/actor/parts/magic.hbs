            <div class="summoning {{#if system.toggles.summoningVis}}hidden{{/if}}">
                <h5> {{localize "abfalter.magicTab.summoning"}} </h5>
                <div>
                    <span> {{localize "abfalter.ability"}} </span>
                    <span> {{localize "abfalter.base"}} </span>
