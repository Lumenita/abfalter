            <div class="turnDayMaint {{#if system.toggles.turnMaintVis}}hidden{{/if}}">
                <h5> {{localize "abfalter.magicTab.turnMaint"}} </h5>
                <div>
                    <span> {{localize "abfalter.name"}} </span>
                    <span> {{localize "abfalter.magicTab.spellCost"}} </span>
