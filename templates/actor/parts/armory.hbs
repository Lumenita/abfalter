                    {{/each}}
                </div>
                <div class="itemControls">
                    <a class="item-control" data-action="createItem" data-type="inventory"><i class="fas fa-plus"></i> {{localize "abfalter.addInventory"}} </a>
                    <a data-action="toggleValue" class="{{#if system.itemToggle.inventory}}armorpenalty{{/if}}" data-label="system.itemToggle.inventory" data-ability="{{system.itemToggle.inventory}}"><i class="{{#if system.itemToggle.inventory}}fa-solid fa-bars-staggered{{else}}fa-solid fa-bars{{/if}}"></i> {{localize "abfalter.modify"}} </a>
                </div>
            </fieldset>

        </div>
    </div>
</section>
