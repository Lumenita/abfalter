<form class="{{cssClass}} baseAbfalter itemWindow" autocomplete="off">
    <div class="itemStart">
        <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <label> <input name="name" type="text" value="{{item.name}}" placeholder="Name" /> </label>
    </div>

    <div class="invocationContent">
        <h5> {{localize "abfalter.magicTab.invocationOne"}} </h5>
        <div>
            <label> <span> {{localize "abfalter.basicInfo.cost"}} </span> <input type="number" name="system.cost" value="{{system.cost}}" /> </label>
            <label> <span> {{localize "abfalter.basicInfo.difficulty"}} </span> <input type="number" name="system.difficulty" value="{{system.difficulty}}" /> </label>
        </div>
        <div>
            <label> <span> {{localize "abfalter.basicInfo.attack"}} </span> <input type="text" name="system.atk" value="{{system.atk}}" /> </label>
            <label> <span> {{localize "abfalter.basicInfo.defense"}} </span> <input type="text" name="system.def" value="{{system.def}}" /> </label>
        </div>
        <div>
            <label> <span> {{localize "abfalter.basicInfo.action"}} </span> <input type="text" name="system.action" value="{{system.action}}" /> </label>
        </div>
        <h6> {{localize "abfalter.magicTab.pact"}} </h6>
        <textarea name="system.pact" rows="5">{{system.pact}}</textarea>
        <h6> {{localize "abfalter.magicTab.effDuration"}} </h6>
        <div style="display: grid;">
            <textarea class="textarea-auto-resize" rows="5" name="system.description" style="grid-area: 1 / 1 / 2/ 2;">{{system.description}}</textarea>
            <div class="textarea-auto-resize-sibling" aria-hidden="true" style="visibility: hidden; grid-area: 1 / 1 / 2 / 2;">{{system.description}}</div>
        </div>
    </div>
</form>