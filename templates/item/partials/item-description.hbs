<section class="baseAbfalter itemDescStyle tab {{tabs.description.cssClass}}" data-group="{{tabs.description.group}}" data-tab="{{tabs.description.id}}">
    {{#ifIn document.type "proficiency backgroundInfo elan armor weapon ammo class"}}
        <h6> {{localize "abfalter.description"}} </h6>
        <prose-mirror name="system.description" data-document-uuidd="{{actor.uuid}}" value="{{system.description}}" toggled="true">
            {{{enrichedDesc}}}
        </prose-mirror>
        {{#ifEquals document.type "elan"}}
        <h6> {{localize "abfalter.gainElan"}} </h6>
        <prose-mirror name="system.gain" data-document-uuidd="{{actor.uuid}}" value="{{system.gain}}" toggled="true">
            {{{enrichedGain}}}
        </prose-mirror>

        <h6> {{localize "abfalter.gainUpperElan"}} </h6>
        <prose-mirror name="system.gainUpper" data-document-uuidd="{{actor.uuid}}" value="{{system.gainUpper}}" toggled="true">
            {{{enrichedGainUpper}}}
        </prose-mirror>

        <h6> {{localize "abfalter.loseElan"}} </h6>
        <prose-mirror name="system.lose" data-document-uuidd="{{actor.uuid}}" value="{{system.lose}}" toggled="true">
            {{{enrichedLose}}}
        </prose-mirror>
        {{/ifEquals}}
    {{else}}
        {{#ifIn document.type "monsterPower psychicMatrix"}}
        <h6> {{localize "abfalter.shortDesc"}} </h6>
        <div style="display: grid;">
            <textarea class="textarea-auto-resize" name="system.shortDesc" style="grid-area: 1 / 1 / 2/ 2;">{{system.shortDesc}}</textarea>
            <div class="textarea-auto-resize-sibling" aria-hidden="true" style="visibility: hidden; grid-area: 1 / 1 / 2 / 2;">{{system.shortDesc}}</div>
        </div>
        {{/ifIn}}

        {{#ifEquals document.type "mentalPattern"}}
        <h6> {{localize "abfalter.bonus"}} </h6>
        {{else}}
        <h6> {{localize "abfalter.description"}} </h6>
        {{/ifEquals}}

        <div style="display: grid;">
            <textarea class="textarea-auto-resize" name="system.description" style="grid-area: 1 / 1 / 2/ 2;">{{system.description}}</textarea>
            <div class="textarea-auto-resize-sibling" aria-hidden="true" style="visibility: hidden; grid-area: 1 / 1 / 2 / 2;">{{system.description}}</div>
        </div>

        {{#ifEquals document.type "mentalPattern"}}
        <h6> {{localize "abfalter.penalty"}} </h6>
        <div style="display: grid;">
            <textarea class="textarea-auto-resize" name="system.penalty" style="grid-area: 1 / 1 / 2/ 2;">{{system.penalty}}</textarea>
            <div class="textarea-auto-resize-sibling" aria-hidden="true" style="visibility: hidden; grid-area: 1 / 1 / 2 / 2;">{{system.penalty}}</div>
        </div>
        {{/ifEquals}}
    {{/ifIn}}
</section>