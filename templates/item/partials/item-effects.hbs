<section class="itemEffects baseAbfalter itemPage tab {{tabs.effects.cssClass}}" data-group="{{tabs.effects.group}}" data-tab="{{tabs.effects.id}}">
    <ol class="effects-list">
        {{#each effects as |section sid|}}
        <li class="effects-header flexrow" data-effect-type="{{section.type}}">
            <div class="effect-name flexrow">{{localize section.label}}</div>
            <div class="effect-source">{{localize "abfalter.source"}}</div>
            <div class="effect-source">{{localize "abfalter.duration"}}</div>
            <div class="item-controls effect-controls flexrow">
                <a class="effect-control" data-action="createEffect" data-document-class="ActiveEffect"
                data-origin="{{@root.document.uuid}}" data-img="icons/svg/aura.svg"
                {{#ifEquals section.type "inactive"}}
                data-disabled="true"
                {{/ifEquals}}
                {{#ifEquals section.type "temporary"}}
                data-duration.rounds="1"
                {{/ifEquals}}
                {{#ifEquals section.type "applied"}}
                data-transfer="false"
                {{/ifEquals}}>
                    <i class="fas fa-plus"></i> {{localize "abfalter.add"}}
                </a>
            </div>
        </li>

        <ol class="item-eff">
            {{#each section.effects as |effect|}}
            <li class="item effect flexrow draggable" data-effect-id="{{effect.id}}" data-parent-id="{{effect.parent.id}}" data-document-class="ActiveEffect">
                <div class="item-name effect-name flexrow">{{effect.name}}</div>
                <div class="effect-source">{{effect.sourceName}}</div>
                <div class="effect-duration">{{effect.duration.label}}</div>
                <div class="item-controls effect-controls flexrow">
                    <a class="effect-control" data-action="toggleEffect">
                        <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
                    </a>
                    <a class="effect-control" data-action="viewEffect">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="effect-control" data-action="deleteEffect">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
        {{/each}}
    </ol>
</section>