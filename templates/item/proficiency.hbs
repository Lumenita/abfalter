<form class="{{cssClass}} baseAbfalter itemWindow" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="item-img" src="{{item.img}}" data-edit="img" data-tooltip="{{item.name}}" />

        <div class="header-details flexrow">
            <h1 class="itemName">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'abfalter.sheet.nameItem'}}" />
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{localize "abfalter.armoryTab.prof"}}</h4>
                <span class="item-subType">
                    {{localize "abfalter.sheet.toggle"}}
                    <a class="toggleBoolean" data-label="system.toggleItem" data-ability="{{system.toggleItem}}"><i class="{{#if system.toggleItem}}fa-solid fa-toggle-off{{else}}fa-solid fa-toggle-on{{/if}}"></i></a>
                </span>
            </div>

            <ul class="summary flexrow">
                <li>{{localize "abfalter.basicInfo.cost"}}: {{system.cost}}</li>
                <li>
                    <select name="system.type">
                        {{selectOptions proficiencyObjList selected=system.type localize=true}}
                    </select>
                </li>
                <li></li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs itemTabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "abfalter.basicInfo.description" }}</a>
        <a class="item" data-tab="details">{{ localize "abfalter.basicInfo.details" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab description flexcol" data-group="primary" data-tab="description">
            <h6> {{localize "abfalter.basicInfo.description"}} </h6>
            <div style="display: grid;">
                <textarea class="textarea-auto-resize" name="system.description" style="grid-area: 1 / 1 / 2/ 2;">{{system.description}}</textarea>
                <div class="textarea-auto-resize-sibling" aria-hidden="true" style="visibility: hidden; grid-area: 1 / 1 / 2 / 2;">{{system.description}}</div>
            </div>
        </div>

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h6> {{localize "abfalter.armoryTab.prof"}} {{ localize "abfalter.basicInfo.details" }} </h6>
            <label> <span> {{localize "abfalter.basicInfo.cost"}} </span> <input type="number" name="system.cost" value="{{system.cost}}" /> </label>
        </div>

    </section>

</form>
