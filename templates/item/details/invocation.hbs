<section class="baseAbfalter itemPage tab {{tabs.details.cssClass}}" data-group="{{tabs.details.group}}" data-tab="{{tabs.details.id}}">
    <fieldset>
        <legend> {{ localize "abfalter.generalDetails" }} </legend>
        <label class="itemSimpleLabel"> <span> {{localize "abfalter.cost"}} </span> <input type="number" name="system.cost" value="{{system.cost}}" /> </label>
        <label class="itemSimpleLabel"> <span> {{localize "abfalter.difficulty"}} </span> <input type="number" name="system.difficulty" value="{{system.difficulty}}" /> </label>
        <label class="itemSimpleLabel"> <span> {{localize "abfalter.attack"}} </span> <input type="text" name="system.atk" value="{{system.atk}}" /> </label>
        <label class="itemSimpleLabel"> <span> {{localize "abfalter.defense"}} </span> <input type="text" name="system.def" value="{{system.def}}" /> </label>
        <label class="itemSimpleLabel"> <span> {{localize "abfalter.action"}} </span> <input type="text" name="system.action" value="{{system.action}}" /> </label>
    </fieldset>

    <h6> {{localize "abfalter.pact"}} </h6>
    <textarea name="system.pact" rows="5">{{system.pact}}</textarea>

</section>