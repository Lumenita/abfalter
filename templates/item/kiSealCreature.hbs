<form class="{{cssClass}} baseAbfalter itemWindow" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="item-img" src="{{item.img}}" data-edit="img" data-tooltip="{{item.name}}" />

        <div class="header-details flexrow">
            <h1 class="itemName">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'abfalter.sheet.nameItem'}}" />
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{localize "abfalter.kiTab.kiSealsCre"}}</h4>
            </div>

            <ul class="summary flexrow">
                <li>{{localize "abfalter.basicInfo.level"}}: {{system.level}}</li>
                <li></li>
                <li></li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs itemTabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "abfalter.basicInfo.description" }}</a>
        <a class="item" data-tab="details">{{ localize "abfalter.basicInfo.details" }}</a>
        <a class="item" data-tab="effects">{{ localize "abfalter.basicInfo.effects" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab description flexcol" data-group="primary" data-tab="description">
            <h6> {{localize "abfalter.basicInfo.description"}} </h6>
            <div style="display: grid;">
                <textarea class="textarea-auto-resize" name="system.description" style="grid-area: 1 / 1 / 2/ 2;">{{system.description}}</textarea>
                <div class="textarea-auto-resize-sibling" aria-hidden="true" style="visibility: hidden; grid-area: 1 / 1 / 2 / 2;">{{system.description}}</div>
            </div>
        </div>

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h6> {{localize "abfalter.kiTab.kiSealsCre"}} {{ localize "abfalter.basicInfo.details" }} </h6>
            <label> <span> {{localize "abfalter.basicInfo.level"}} </span> <input type="number" name="system.level" value="{{system.level}}" /> </label>
            
            <div class="kiSealContent">
                <div>
                    <span> {{localize "abfalter.kiTab.sealType"}} </span>
                    <span> {{localize "abfalter.kiTab.sealWood"}} </span>
                    <span> {{localize "abfalter.kiTab.sealMetal"}} </span>
                    <span> {{localize "abfalter.kiTab.sealAir"}} </span>
                    <span> {{localize "abfalter.kiTab.sealWater"}} </span>
                    <span> {{localize "abfalter.kiTab.sealFire"}} </span>
                </div>
                <div>
                    <span> {{localize "abfalter.kiTab.minor"}} </span>
                    <input name="system.minor.wood" type="number" value="{{system.minor.wood}}" />
                    <input name="system.minor.metal" type="number" value="{{system.minor.metal}}" />
                    <input name="system.minor.air" type="number" value="{{system.minor.air}}" />
                    <input name="system.minor.water" type="number" value="{{system.minor.water}}" />
                    <input name="system.minor.fire" type="number" value="{{system.minor.fire}}" />
                </div>
                <div>
                    <span> {{localize "abfalter.kiTab.major"}} </span>
                    <input name="system.major.wood" type="number" value="{{system.major.wood}}" />
                    <input name="system.major.metal" type="number" value="{{system.major.metal}}" />
                    <input name="system.major.air" type="number" value="{{system.major.air}}" />
                    <input name="system.major.water" type="number" value="{{system.major.water}}" />
                    <input name="system.major.fire" type="number" value="{{system.major.fire}}" />
                </div>
            </div>
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> systems/abfalter/templates/actor/parts/active-effects.hbs }}
        </div>
    </section>

</form>
