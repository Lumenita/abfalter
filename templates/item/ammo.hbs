<form class="{{cssClass}} baseAbfalter itemWindow" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="item-img" src="{{item.img}}" data-edit="img" data-tooltip="{{item.name}}" />

        <div class="header-details flexrow">
            <h1 class="itemName">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'abfalter.nameItem'}}" />
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{localize "abfalter.ammo"}}</h4>
                <span class="item-subType"></span>
            </div>

            <ul class="summary flexrow">
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs itemTabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "abfalter.description" }}</a>
        <a class="item" data-tab="details">{{ localize "abfalter.details" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab description flexcol" data-group="primary" data-tab="description">
            <h6> {{localize "abfalter.description"}} </h6>
            <Span> WIP 1/12/25</Span>

            {{editor system.description class="itemDescInfo" target="system.description" button=true editable=editable engine="prosemirror"}}
        </div>

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h6> {{localize "abfalter.ammo"}} {{ localize "abfalter.details" }} </h6>
                <label> <span> {{localize "abfalter.price"}} </span> <input type="number" name="system.price" value="{{system.price}}" /> </label>

            <fieldset class="sectionItem">
                <legend>
                    <span> {{localize "abfalter.itemDets"}} </span>
                </legend>
                <label> <span> {{localize "abfalter.weight"}} </span> <input type="number" name="system.weight" value="{{system.weight}}" /> </label>
                <label> <span> {{localize "abfalter.quantity"}} </span> <input type="number" name="system.quantity" value="{{system.quantity}}" /> </label>
            </fieldset>

            <fieldset class="sectionItem">
                <legend>
                    <span> {{localize "abfalter.ammo"}} {{ localize "abfalter.details" }} </span>
                </legend>
                <label> <span> {{localize "abfalter.damage"}} </span> <input type="number" name="system.damage" value="{{system.damage}}" /> </label>

                <div class="csSelect">
                    <label> 
                        <span> {{localize "abfalter.dmgType"}} </span>
                        {{#if system.spiritHomebrew}}
                        <select name="system.dmgType" >
                            {{selectOptions wepDamageTypeSpiritObjList selected=system.dmgType localize=true}}
                        </select>
                        {{else}}
                        <select name="system.dmgType">
                            {{selectOptions wepDamageTypeObjList selected=system.dmgType localize=true}}
                        </select>
                        {{/if}}
                    </label>
                </div>
                <div class="csSelect">
                    <label>
                        <span> {{localize "abfalter.dmgMod"}} </span> 
                        <select name="system.dmgMod">
                            {{selectOptions damageModObjList selected=system.dmgMod localize=true}}
                        </select>
                    </label>
                </div>

                <label> <span> {{localize "abfalter.breakage"}} </span> <input type="number" name="system.break" value="{{system.break}}" /> </label>
                <label> <span> {{localize "abfalter.atPen"}} </span> <input type="number" name="system.atPen" value="{{system.atPen}}" /> </label>
            </fieldset>
            
        </div>

    </section>
</form>
